<div class="clucks">
  <p><b><%= link_to cluck.user.email, users_cluck_path(cluck.user) %></b> <%= link_to 'Show', cluck_path(cluck) %></p>
  <p><%= cluck.content %></p>
  <% if current_user != cluck.user %>
    <% if @user_clucks %>
      <p><%= link_to 'Undo Recluck', recluck_path(cluck), method: :delete %></p>
    <% end %>
    <p><%= link_to 'Recluck', reclucks_path(cluck: cluck), method: :post %> <%= cluck.reclucks.count == 0 ? '' : cluck.reclucks.count %></p>
  <% else %>
    <p><%= link_to 'Destroy', cluck, method: :delete, data: { confirm: 'Are you sure?' } %></p>
  <% end %>
  <p><%= link_to 'Likes', likes_path(cluck: cluck), method: :post %> <%= cluck.likes.count == 0 ? '' : cluck.likes.count %></p>
</div>