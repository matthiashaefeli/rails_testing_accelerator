<div class="cluck">
  <b><%= link_to cluck.user.email, user_clucks_path(cluck.user) %></b>

  <%= link_to 'Show', cluck %>
  <div class="cluck-content"><%= cluck.content %></div>

  <% if cluck.likes.any? %>
    <div><%= pluralize cluck.likes.count, 'like' %></div>
  <% end %>

  <% if cluck.reclucks.any? %>
    <div><%= pluralize cluck.reclucks.count, 'recluck' %></div>
  <% end %>

  <% if cluck.liked_by?(current_user) %>
    <%= link_to 'Undo like', like_path(id: cluck.like_for(current_user).id), method: :delete %>
  <% else %>
    <%= link_to 'Like', likes_path(cluck_id: cluck.id), method: :post %>
  <% end %>

  <% if cluck.reclucked_by?(current_user) %>
    <%= link_to 'Undo recluck', recluck_path(id: cluck.recluck_for(current_user).id), method: :delete %>
  <% else %>
    <%= link_to 'Recluck', reclucks_path(cluck_id: cluck.id), method: :post %>
  <% end %>

  <% if cluck.user == current_user %>
    <div><%= link_to 'Destroy', cluck, method: :delete, data: { confirm: 'Are you sure?' } %></div>
  <% end %>
</div>